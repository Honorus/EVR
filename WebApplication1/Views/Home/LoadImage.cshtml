@{
    ViewBag.Title = "Load Image";
}

@section script{
    <script src="~/Scripts/load_mini-image.js"></script>
}

<h2>Load Image</h2>

<div class="alert-message">
    <div class="message">
        <span class="message-text">
            This file type is not supported. Try uploading an image.
        </span>
        <button class="close-message"></button>
    </div>
</div>

@using (Html.BeginForm("LoadImage", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="file" name="file" id="file" multiple accept="image/*"/>
    <div id="inputImageName" style="display:inline-block">
        <br />
        <p style="float:left"><b>Image name:</b></p>
        <input type="text" name="filename" id="filename" placeholder="Enter file name, please" required/>
    </div>
    <div id="imageContainer">

    </div>
    <br />
    <input type="submit" />
}
